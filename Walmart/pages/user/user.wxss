.avatar{

  width:100%;
  height:200rpx;
  background:linear-gradient(to bottom,#F5BA47,#FCE9BC);

}
.userinfo{
  display: flex;
  padding:30rpx;
  font-size:32rpx;
}

.userinfo image{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  margin-right:20rpx;

}

.userinfo .userinfo_right{
  flex: 1;
  padding-left: 20rpx;
}

.userinfo .userinfo_right view{
  line-height:1.8;
}
/*列表*/


.cells{

  width:100%;
  margin-top:20rpx;
  background-color:#fff;
  font-size:36rpx;

}
.cells .block {
  border-bottom:10px solid #F9F9F9;
}
.cells .block .item{

  display: flex;
  padding:30rpx 20rpx;
  border-top:1px solid #F9F9F9;


}

.cells .block .item image{

  width:48rpx;
  max-height:48rpx;
  padding-right:20rpx;

}

.cells .block  .item_right{

  flex: 1;
  display: flex;
}

.cells .block  .item_right .desc{
  flex: 1;
  /* padding-right: -20px; */
}

.cells .block  .item_right:after{

  content: '';
  display: inline-block;
  width: 10px;
  height: 10px;
  border-width: 2px 2px 0 0;
  border-color: #eee;
  border-style: solid;
  transform: rotate(45deg);
  
  
}